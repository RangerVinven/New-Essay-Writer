generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Alternative_Sentences {
  id                      Int       @id @default(autoincrement()) @db.UnsignedInt
  Alternative_To_Sentence Int       @db.UnsignedInt
  Sentence                String    @db.VarChar(1000)
  Sentences               Sentences @relation(fields: [Alternative_To_Sentence], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Alternative_To_Sentence_To_Sentence")

  @@index([Alternative_To_Sentence], map: "Alternative_To_Sentence_To_Sentence")
}

model Essays {
  id            Int       @id @default(autoincrement()) @db.UnsignedInt
  Last_Modified DateTime  @default(now()) @db.Timestamp(0)
  Name          String    @db.Text
  Headers       Headers[]
}

model Headers {
  id             Int          @id @default(autoincrement()) @db.UnsignedInt
  Essay          Int          @db.UnsignedInt
  Name           String       @db.VarChar(255)
  Order_In_Essay Int
  Essays         Essays       @relation(fields: [Essay], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Headers_ibfk_1")
  Paragraphs     Paragraphs[]

  @@index([Essay], map: "Essay")
}

model Paragraphs {
  id              Int         @id @default(autoincrement()) @db.UnsignedInt
  Header          Int         @db.UnsignedInt
  Order_In_Header Int
  Headers         Headers     @relation(fields: [Header], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Paragraphs_To_Headers")
  Sentences       Sentences[]

  @@index([Header], map: "Paragraphs_To_Headers")
}

model Sentences {
  id                    Int                     @id @default(autoincrement()) @db.UnsignedInt
  Paragraph             Int                     @db.UnsignedInt
  Sentence              String                  @db.VarChar(1000)
  Order_In_Paragraph    Int
  Alternative_Sentences Alternative_Sentences[]
  Paragraphs            Paragraphs              @relation(fields: [Paragraph], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Sentence_To_Paragraph")

  @@index([Paragraph], map: "Sentence_To_Paragraph")
}
